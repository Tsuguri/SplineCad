<UserControl x:Class="SplineCAD.UIControls.Menu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SplineCAD.UIControls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="400">
    <Menu>
        <MenuItem Header="File">
            <MenuItem Header="Export to IGS" Command="{Binding ExportSceneCommand}"/>
        </MenuItem>
        <MenuItem Header="Splines">
            <MenuItem Header="Add B-Spline" Command="{Binding CreateBsplineCommand}" />
            <MenuItem Header="Add NURBS" Command="{Binding CreateNurbsCommand}" />
            <MenuItem Header="Add T-Spline" Command="{Binding CreateTsplineCommand}" />
        </MenuItem>
    </Menu>
</UserControl>
