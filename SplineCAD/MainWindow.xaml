<Window x:Class="SplineCAD.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SplineCAD"
        xmlns:SCUI="clr-namespace:SplineCAD.UIControls"
        mc:Ignorable="d"
        
        Title="SplineCAD" Height="720" Width="1280"
        Loaded="MainWindow_OnLoaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition  Width="auto"/>
        </Grid.ColumnDefinitions>
        <SCUI:Menu Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" />
        <WindowsFormsHost  Grid.Column="0" Grid.Row="1" Name="ImageHost" />
        <GridSplitter Grid.Row="1" Grid.Column="1" Margin="2,0,2,0"
                      Width="3" Background="DarkGray" 
                      VerticalAlignment="Stretch" 
                      HorizontalAlignment="Center"  />
        <SCUI:RightSideTools Grid.Column="2" Grid.Row="1" Width="200" />
    </Grid>
</Window>
